<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicketOffice" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/black</item>


    </style>

    <style name="Theme.TicketOffice.Header1">
        <item name="fontFamily">@font/sf_regular</item>
        <item name="fontWeight">600</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.TicketOffice.Header1.AviaTicketMainTitle">
        <item name="android:textAlignment">center</item>
        <item name="color">@color/grey3</item>
    </style>

    <style name="Theme.TicketOffice.Header1.AviaTicketPromoTitle">
        <item name="android:textAlignment">center</item>
        <item name="color">@color/grey3</item>
    </style>

    <style name="Theme.TicketOffice.Text1">
        <item name="fontFamily">@font/sf_regular</item>
        <item name="fontWeight">600</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.TicketOffice.Text1.White">
        <item name="color">@color/white</item>
    </style>

    <style name="Theme.TicketOffice.Text2">
        <item name="fontFamily">@font/sf_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.TicketOffice.Text2.White">
        <item name="color">@color/white</item>
    </style>

    <style name="Theme.TicketOffice.EditTextFlight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="fontFamily">@font/sf_regular</item>
        <item name="fontWeight">600</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/_0dp</item>
        <item name="android:paddingStart">@dimen/_0dp</item>
        <item name="android:paddingEnd">@dimen/_0dp</item>
        <item name="android:inputType">text</item>
        <item name="singleLine">true</item>
    </style>

</resources>