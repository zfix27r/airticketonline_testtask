<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicketOffice" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.TicketOffice.Header1">
        <item name="fontFamily">@font/sf_semibold</item>
        <item name="fontWeight">600</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="color">@color/grey3</item>
    </style>

    <style name="Theme.TicketOffice.Text1">
        <item name="fontFamily">@font/sf_regular</item>
        <item name="fontWeight">600</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.TicketOffice.Text2">
        <item name="fontFamily">@font/sf_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>